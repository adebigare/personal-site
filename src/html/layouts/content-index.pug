- var index = require('./../../assets/data/index.json')
//
//Named Welcome Headline
//
div.hp__email
	span.hp__email--quip Let's Talk!
	a.hp__email--address(href="mailto:adebigare@gmail.com") adebigare@gmail.com
header.hp-header
	img.hp__headshot(src=require('./../../assets/images/headshot-normal.png'))
	.hp-intro
		h4.hp__hello Hi, I'm
		h2.hp__name Adrienne Debigare
		p.hp-intro__explain #{index.introExplain}

//
// Homepage Module Classes
//
- var headlineWhiteClasses = ['hero__headline', 'hero_headline_white']
- var headlineSecondaryClasses = ['hero__headline', 'hero_headline_secondary']
- var headlineAccentClasses = ['hero__headline', 'hero_headline_accent']
- var headlineSecondaryAccentClasses = ['hero__headline', 'hero_headline_secondary_accent']
//
// First Homepage Link Module – Open Knowledge
//
a.hero.hero_background_ibsul.hero__link(href= `${index.openKnowledge.link}`)
	img(class='hero__img' src=require("./../../assets/images/openknowledge-header.png"))

	div.hero__text-container
		h1(class=headlineWhiteClasses) #{index.openKnowledge.heroTitle}
		h3.hero__intro.hero_intro_secondary_accent #{index.openKnowledge.heroIntro}

//
// Second Homepage Link Module – Data Swap
//
.hero.hero_background_sulcor
	a.hero__link(href= `${index.dataSwap.link}`)
		img(class='hero__img' src=require("./../../assets/images/dataswap-header.png"))
	div.hero__text-container
		h1(class=headlineWhiteClasses) #{index.dataSwap.heroTitle}
		h3.hero__intro.hero_intro_secondary_accent #{index.dataSwap.heroIntro}
